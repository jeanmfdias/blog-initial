@media (max-width: 2000px) {
	.video {
		margin: 10px 0px 10px 0px;
		min-height: 400px;
		width: 100%;
	}

	.block-aside {
		padding-left: 25px;
	}

	/* Parte do Topo do site */
	.banner-frase {
		background: url('<%= image_path "topo.png" %>') no-repeat;
		min-height: 75px;
		margin-top: 20px;
	}
	.fundo-topo {
		background: url('<%= image_path "topo-fundo-centralizado.png" %>') no-repeat;
		top: 0px;
	}

	.banner-frase-h2 {
		background: url('<%= image_path "topo-texto-da-direita.png" %>') no-repeat;
		margin-top: 10px;
		min-height: 15px;
		margin-left: 45px;
	}

	.banner-icones {
		margin-top: 10px;
		float: right;
	}
	/* end top do site */

	.texto-busca-ask {
		font-size: 16px;
		text-align: right;
		padding-right: 5px;
		padding-top: 6px;
		color: #a80000;
	}

	#banner_mobile {
		display: none;
	}

	#adsense-bottom {
		margin-top: 15px;
	}

	.link-nav {
		color: #030303 !important;
		font-size: 14px;
		text-decoration: none !important;
		padding: 15px 0px !important;
		text-align: left;
		font-weight: bold;
	}

	.foto-autor {
		height: 40px;
		width: 40px;
	}

	/* Post sobreposto */

	.welcome-post {
		position: relative;
		min-height: 265px;
	}

	div.titulo_post {
		position: absolute;
		background-color: #a80000;
		color: #ffffff;
		padding: 10px 10px;
		bottom: 25px;
		z-index: 2;
	}

	.imagem {
		position: absolute;
	}

	/* end Post sobreposto */

	.anuncio-google {
		color: #b3b3b3;
		text-align: left;
		font-size: 12px;
		margin-left: 20px;
	}

}

@media (max-width: 1200px) {
	.link-nav {
		font-size: 12px;
	}

	div.menu-footer {
		padding: 0px 0px 0px 0px;
	}

	.welcome-post {
		position: relative;
	}

	.anuncio-google {
		margin-left: 0px;
	}

}

@media (max-width: 992px) {
	.texto-busca-ask {
		text-align: center;
	}

	.banner-frase {
		background-size: 100%;
		min-height: 135px;
	}

	.banner-frase-h2 {
		margin-left: 0px;
	}

	.banner-icones {
		float: none;
		text-align: center;
	}

	.banner-icones {
		margin-bottom: 10px;
	}

	.link-nav {
		font-size: 11px;
	}

	div.menu-footer {
		padding: 0px 0px 0px 0px;
	}

	.block-aside {
		padding-left: 0px;
	}

	#populares, #voce-ja-viu, .categoria_post, #descricao_site, #nome_menu, #nome_social, #banner_site {
		display: none;
	}

	#banner_mobile {
		display: block;
	}

	#aside, #footer {
		text-align: center;
	}

	#logo-jean {
		text-align: center !important;
		margin-top: 20px;
	}

	/* Post sobreposto */

	.imagem {
		position: inherit;
	}

	div.titulo_post {
		background-color: #a80000;
		color: #ffffff;
		padding: 10px 10px;
		bottom: 25px;
		z-index: 2;
		position: inherit;
	}

	.welcome-post {
		position: relative;
		min-height: 65px;
	}

	/* end Post sobreposto */

	.foto-autor {
		height: 60px;
		width: 60px;
	}

	.nome-autor {
		font-size: 20px;
	}

	#social-post {
		min-height: 80px;
	}

}

@media (max-width: 768px) {
	.video {
		margin: 10px 0px 10px 0px;
		min-height: 360px;
		width: 100%;
	}

	.banner-frase {
		background-size: 100%;
		min-height: 95px;
	}

	.link-nav {
		font-size: 18px;
		padding: 8px 0px !important;
	}

	.block-aside {
		padding-left: 0px;
	}

	div.menu-footer {
		padding: 0px 0px 0px 0px;
	}

	#populares, #voce-ja-viu, .categoria_post, #descricao_site, #nome_menu, #nome_social, #banner_site {
		display: none;
	}

	#banner_mobile {
		display: block;
	}

	#aside, #footer {
		text-align: center;
	}

	#logo-jean {
		text-align: center !important;
		margin-top: 20px;
	}

	.foto-autor {
		height: 60px;
		width: 60px;
	}

	.nome-autor {
		font-size: 20px;
	}

	/* Post sobreposto */

	.imagem {
		position: inherit;
	}

	div.titulo_post {
		background-color: #a80000;
		color: #ffffff;
		padding: 10px 10px;
		bottom: 25px;
		z-index: 2;
		position: inherit;
	}

	.welcome-post {
		position: relative;
		min-height: 65px;
	}

	/* end Post sobreposto */
}

@media (max-width: 640px) {
	.video {
		margin: 10px 0px 10px 0px;
		min-height: 276px;
		width: 100%;
	}
}